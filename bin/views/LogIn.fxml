<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controls.LogInController">
   <top>
      <AnchorPane prefHeight="150.0" prefWidth="900.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="160.0" fitWidth="300.0" layoutX="300.0" layoutY="7.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="300.0">
               <image>
                  <Image url="@../../resources/OnlineLogo.jpg" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
   </top>
   <center>
      <AnchorPane prefHeight="450.0" prefWidth="900.0" style="-fx-background-color: teal;" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" layoutX="300.0" layoutY="63.0" prefHeight="50.0" prefWidth="300.0" text="Log In To Account" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Label>
            <TextField fx:id="userField" layoutX="200.0" layoutY="184.0" prefHeight="30.0" prefWidth="200.0" AnchorPane.rightAnchor="500.0" AnchorPane.topAnchor="184.0">
               <effect>
                  <DropShadow />
               </effect>
            </TextField>
            <PasswordField fx:id="passField" layoutX="525.0" layoutY="186.0" prefHeight="30.0" prefWidth="200.0" AnchorPane.leftAnchor="500.0" AnchorPane.topAnchor="180.0">
               <effect>
                  <DropShadow />
               </effect>
            </PasswordField>
            <Label alignment="CENTER" layoutX="150.0" layoutY="147.0" prefHeight="30.0" prefWidth="200.0" text="Enter Username" textFill="WHITE" AnchorPane.rightAnchor="500.0" AnchorPane.topAnchor="150.0">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Label>
            <Label alignment="CENTER" layoutX="500.0" layoutY="147.0" prefHeight="30.0" prefWidth="200.0" text="Enter Password" textFill="WHITE" AnchorPane.leftAnchor="500.0" AnchorPane.topAnchor="150.0">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Label>
            <Hyperlink fx:id="accountLink" alignment="CENTER" layoutX="300.0" layoutY="243.0" onAction="#accountLinkClicked" prefHeight="30.0" prefWidth="300.0" text="Click Here to Create an Account" textFill="SALMON">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Hyperlink>
            <Button fx:id="logInBtn" layoutX="375.0" layoutY="302.0" mnemonicParsing="false" onAction="#logInBtnClicked" prefHeight="30.0" prefWidth="150.0" text="Log In" AnchorPane.rightAnchor="375.0" AnchorPane.topAnchor="302.0">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Button>
            <Button fx:id="exitBtn" layoutX="375.0" layoutY="380.0" mnemonicParsing="false" onAction="#exitBtnClicked" prefHeight="30.0" prefWidth="150.0" text="Exit App" AnchorPane.leftAnchor="375.0" AnchorPane.topAnchor="380.0">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Button>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
